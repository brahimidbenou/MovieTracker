@page "/"
@using FrontEnd.Components.Shared
@inject NavigationManager NavigationManager
@inject AuthProvider AuthService

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Films - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6c757d;
            --accent-color: #ff6b6b;
        }

        body {
            background-color: #212529;
            color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .banner {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                        url('https://images.pexels.com/photos/3921000/pexels-photo-3921000.jpeg');
            background-size: cover;
            background-position: center;
            height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            margin-top: 3rem;
            border-radius: 15px;
            overflow: hidden;
        }

        .banner::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, var(--primary-color) 10%, transparent 90%);
            opacity: 0.3;
        }

        .banner h1 {
            font-size: 4rem;
            font-weight: 700;
            text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
            position: relative;
            z-index: 1;
            text-align: center;
            background: linear-gradient(45deg, #fff, #e0e0e0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .search-container {
            margin: 2rem auto;
            max-width: 800px;
            padding: 0 1rem;
        }

        .search-form {
            position: relative;
            display: flex;
            gap: 1rem;
        }

        .search-input {
            width: 100%;
            padding: 1.5rem 2rem;
            border-radius: 50px;
            border: none;
            background: rgba(255, 255, 255, 0.551);
            color: white;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .search-input:focus {
            background: rgba(255, 255, 255, 0.692);
            box-shadow: 0 0 15px rgba(255, 107, 107, 0.3);
        }

        .search-button {
            padding: 0 2.5rem;
            border-radius: 50px;
            background: var(--accent-color);
            border: none;
            font-weight: 600;
            transition: transform 0.2s ease;
        }

        .search-button:hover {
            transform: translateY(-2px);
        }

        footer {
            background: #1a1d20;
            margin-top: auto;
            padding: 3rem 0;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .social-links a {
            color: white;
            font-size: 1.5rem;
            margin: 0 0.5rem;
            transition: color 0.3s ease;
        }

        .social-links a:hover {
            color: var(--accent-color);
        }

        @@media (max-width: 768px) {
            .banner h1 {
                font-size: 2.5rem;
            }
            
            .search-form {
                flex-direction: column;
            }
            
            .search-button {
                padding: 1rem;
            }
        }
    </style>
</head>

<body>
    <main class="container-fluid px-0">
        <button @onclick=" () => LogOut()" 
            class="btn btn-outline-danger p-2 d-flex align-items-center" 
            title="Déconnexion">
            <i class="bi bi-box-arrow-right fs-5"></i>
        </button>
        

        <!-- Banner -->
        <section class="banner mx-3">
            <h1 class="display-1">Explorez le monde<br>du cinéma</h1>
        </section>

        <!-- Footer -->
        <footer>
            <div class="footer-content">
                <div>
                    <h4>À propos</h4>
                    <p>Découvrez les meilleurs films du moment et trouvez vos prochaines séances.</p>
                </div>
                <div>
                    <h4>Contact</h4>
                    <p>Abdelaziz.BEN_TAB@etu.uca.fr<br>Brahim.ID_BENOUAKRIM@etu.uca.fr</p>
                </div>
                <div>
                    <h4>Réseaux sociaux</h4>
                    <div class="social-links">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-twitter-x"></i></a>
                        <a href="https://www.instagram.com/azizbentalb10/"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <p>&copy; 2025 Films. Tous droits réservés.</p>
            </div>
        </footer>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@code {
    bool isAdmin = false;
    string title = "";
    private async Task SearchTask() {
        if (!string.IsNullOrWhiteSpace(title)) {
            NavigationManager.NavigateTo($"/Search/{title}");
        }
    }

    private async Task LogOut() {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/Login");
        if(isAdmin) isAdmin=false;
    }
}